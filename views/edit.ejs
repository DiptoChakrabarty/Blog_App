<%- include('partials/header') %>
<div class="ui main text container segment new-blog-padding">
  <div class="ui huge header word-wrap">
    <h1>Edit Blog: <%=blog.title %></h1>
  </div>
  <form
    class="ui form"
    action="/blogs/<%= blog._id%>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label for="title">Title</label>
      <input
        type="text"
        name="blog[title]"
        value="<%= blog.title %>"
        id="title"
        required
      />
    </div>
    <div class="field">
      <label for="image">Image</label>
      <input
        type="text"
        name="blog[image]"
        value="<%= blog.image %>"
        id="image"
        required
      />
    </div>
    <div class="field">
      <label for="description">Description</label>
      <textarea name="blog[body]" cols="30" rows="10" id="description" required>
<%= blog.body %></textarea
      >
    </div>

    <button class="ui violet big basic button" type="submit">Send</button>
  </form>
</div>

<%- include('partials/footer') %>
