<%- include('../partials/header') %>
<div class="ui main text container segment new-blog-padding">
  <div class="ui huge header word-wrap">Add Comment for: <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>/comments" method="POST">
    <div class="field">
      <label for="comment">Comment </label>
      <input
        type="text"
        name="comments[content]"
        placeholder="Content"
        id="comment"
        required
      />
    </div>
    <div class="field">
      <label for="comment-author">Comment Author</label>
      <input
        type="text"
        name="comments[author]"
        placeholder="Author"
        id="comment-author"
        required
      />
    </div>

    <button class="ui violet big basic button" type="submit">Send</button>
  </form>
</div>

<%- include('../partials/footer') %>
