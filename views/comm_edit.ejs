<%- include('partials/header') %>
<div class="ui main text container segment new-blog-padding">
  <div class="ui huge header"><h1>Edit Blog Comment</h1></div>
  <form
    class="ui form"
    action="/blogs/<%= blog_id%>/comms/<%=comments_id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label for="comment">Comment</label>
      <textarea
        name="comment[content]"
        cols="30"
        rows="10"
        id="comment"
        required
      >
<%= comments.content %></textarea
      >
    </div>

    <button class="ui violet big basic button" type="submit">Send</button>
  </form>
</div>

<%- include('partials/footer') %>
