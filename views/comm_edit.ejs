<%- include('partials/header')  %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog <%=blog.title %> </div>
    <form  class="ui form" action="/blogs/<%= blog._id%>/comms/<%=comments._id %>/edit?_method=PUT" method="POST">
        <div class="field">
            <label >Blog Title </label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label >Comment</label>
            <textarea name="comment[content]"  cols="30" rows="10"><%= comments.content %></textarea>
            
        </div>
   
    
    
    <input class="ui violet big basic button" type="submit" >
    
    </form>
</div>

