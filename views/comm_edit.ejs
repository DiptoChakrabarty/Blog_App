<%- include('partials/header') %>
<div class="ui main text container segment new-blog-padding">
  <div class="ui huge header">Edit Blog Comment</div>
  <form
    class="ui form"
    action="/blogs/<%= blog_id%>/comms/<%=comments_id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label>Comment</label>
      <textarea name="comment[content]" cols="30" rows="10" required>
<%= comments.content %></textarea
      >
    </div>

    <input class="ui violet big basic button" type="submit" />
  </form>
</div>

<%- include('partials/footer') %>
