<%- include('partials/header') %>
<div class="ui main text container segment new-blog-padding">
  <div class="ui huge header">New Blog</div>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label for="title">Title</label>
      <input
        type="text"
        name="blog[title]"
        placeholder="Title"
        id="title"
        required
      />
    </div>
    <div class="field">
      <label for="image">Image</label>
      <input
        type="text"
        name="blog[image]"
        placeholder="Image"
        id="image"
        required
      />
    </div>
    <div class="field">
      <label for="description">Description</label>
      <textarea
        name="blog[body]"
        cols="30"
        rows="10"
        required
        id="description"
      ></textarea>
    </div>

    <input class="ui violet big basic button" type="submit" />
  </form>
</div>

<%- include('partials/footer') %>
